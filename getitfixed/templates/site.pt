<!DOCTYPE html>
<html lang="${request.locale_name}"
      tal:define="deform_dependencies deform_dependencies|None">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>getitfixed</title>
    <link rel="icon" href="data:;base64,=">
    <!-- Bootstrap core CSS -->
    <link href="${request.static_url('getitfixed:node_modules/bootstrap/dist/css/bootstrap.min.css')}" rel="stylesheet">
    <link href="${request.static_url('getitfixed:node_modules/jquery-bootgrid/dist/jquery.bootgrid.min.css')}" rel="stylesheet">
    <link href="${request.static_url('getitfixed:node_modules/jquery-steps/demo/css/jquery.steps.css')}" rel="stylesheet">
    <link href="${request.static_url('c2cgeoform:static/theme.css')}" rel="stylesheet">
    <link href="${request.static_url('getitfixed:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <!-- Deform CSS -->
    <tal:link tal:condition="deform_dependencies">
    <link rel="stylesheet" href="${request.static_url('deform:static/css/form.css')}" type="text/css" />
    <link tal:repeat="css deform_dependencies['css']" rel="stylesheet" type="text/css" tal:attributes="href request.static_url(css)"/>
    </tal:link>

    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="${request.static_url('getitfixed:node_modules/jquery/dist/jquery.min.js')}"></script>
    <script type="text/javascript" src="${request.static_url('getitfixed:node_modules/bootstrap/dist/js/bootstrap.min.js')}"></script>
    <script type="text/javascript" src="${request.static_url('getitfixed:node_modules/jquery-bootgrid/dist/jquery.bootgrid.min.js')}"></script>
    <script type="text/javascript" src="${request.static_url('getitfixed:node_modules/jquery-steps/build/jquery.steps.min.js')}"></script>
    <script type="text/javascript" src="${request.static_url('c2cgeoform:static/js/c2cgeoform.js')}"></script>

    <!-- Deform JavaScript -->
    <tal:script tal:condition="deform_dependencies">
    <script tal:repeat="js deform_dependencies['js']" type="text/javascript" tal:attributes="src request.static_url(js)"></script>
    </tal:script>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-11"></div>
        <div class="col-md-1">
          <a href="${request.route_url('locale', _query=(('language', 'en'),))}">en</a>
          <a href="${request.route_url('locale', _query=(('language', 'fr'),))}">fr</a>
        </div>
      </div>
      <div class="content">
        <metal:content define-slot="content"></metal:content>
      </div>
    </div>
  </body>
</html>
