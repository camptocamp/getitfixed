{% extends "layout.jinja2" %}
{% block content %}
<div class="container {{ 'issue-view' if issue else '' }}">

  <ol class="breadcrumb">
    <li><a href="{{request.route_url('c2cgeoform_index', application='getitfixed', table='issues')}}">{{_('Issues')}}</a></li>
    <li class="active">{{item_name}}</li>
  </ol>

  <div class="panel panel-default">
    <div class="panel-body">
      {% if issue: %}
      <div class="status-ribbon">{{_(issue.status)}}</div>
      {% endif %}
      {% include 'c2cgeoform:/templates/edit.jinja2' %}
    </div>
  </div>

</div>
{% endblock content %}
